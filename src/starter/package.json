{
  "name": "%PROJECT_NAME%",
  "description": "%PROJECT_DESCRIPTION%",
  "author": "%AUTHOR_NAME% <%AUTHOR_EMAIL%>",
  "private": true,
  "scripts": {
    "serve": "node_modules/.bin/wpbuild serve",
    "build": "node_modules/.bin/wpbuild build --prod",
    "pack": "tar --exclude='dist/wp-content/uploads' -czf dist.tar.gz dist",
