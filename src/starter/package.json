  "lint-staged": {
    "*.{css,scss,sass,js,ts,json,gql,md}": ["wpbuild prettify", "wpbuild lint --fix", "git add"]
  },
  "devDependencies": {
    "@0x6368656174/wp-builder": "^1.0.20",
    "@types/jquery": "^3.3.2"
  },
  "dependencies": {
    "jquery": "^3.3.1"
  }
}
