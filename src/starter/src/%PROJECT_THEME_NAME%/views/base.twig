<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{ site.language_attributes }}> <!--<![endif]-->
<head>
  <meta charset="{{ site.charset }}" />
  <title>
    {% if wp_title %}
      {{ wp_title }} - {{ site.name }}
    {% else %}
      {{ site.name }}
    {% endif %}
  </title>
  <meta name="description" content="{{ site.description }}">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="pingback" href="{{ site.pingback_url }}" />
  <link rel="icon" href="{{ site.url }}/favicon.ico" type="image/x-icon" />
  <link rel="shortcut icon" href="{{ site.url }}/favicon.ico" type="image/x-icon" />

  {{ function('wp_head') }}
</head>

<body class="base">

<h1 class="base__title">
  Project "%PROJECT_NAME%" with theme "%PROJECT_THEME_NAME%" works!
</h1>

{{ function('wp_footer') }}
</body>
</html>
